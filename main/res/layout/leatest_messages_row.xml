<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="100dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView2_leatest_row"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.615"
            app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/username_lateast_row"
            android:textSize="20dp"
            tools:text="username"
            app:layout_constraintStart_toEndOf="@+id/imageView2_leatest_row"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textview_lateast_message_row"/>
    <TextView
            tools:text="lateast message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textview_lateast_message_row"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/imageView2_leatest_row" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username_lateast_row" app:layout_constraintHorizontal_bias="0.5"
    />
</androidx.constraintlayout.widget.ConstraintLayout>