<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:background="@android:color/holo_green_light"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <EditText
            android:layout_height="40sp"
            android:inputType="textPersonName"
            android:background="@drawable/rounded"
            android:ems="10"
            android:paddingLeft="30dp"
            android:id="@+id/email_login" android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp" android:hint="email"
            android:layout_width="wrap_content"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:inputType="textPassword"
            android:ems="10"
            android:paddingLeft="30dp"
            android:background="@drawable/rounded"
            android:id="@+id/password_login" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_login"
            app:layout_constraintEnd_toEndOf="@+id/email_login" app:layout_constraintStart_toStartOf="@+id/email_login"
            android:hint="Password"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_btn"
            android:textStyle="bold"
            android:id="@+id/btn_login" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/password_login"
            app:layout_constraintEnd_toEndOf="@+id/password_login"
            app:layout_constraintStart_toStartOf="@+id/password_login" android:textColor="#ffffff"/>
    <TextView
            android:text="I dont have an account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/I_dont_have_an_account" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_login" app:layout_constraintEnd_toEndOf="@+id/btn_login"
            app:layout_constraintStart_toStartOf="@+id/btn_login"/>
</androidx.constraintlayout.widget.ConstraintLayout>